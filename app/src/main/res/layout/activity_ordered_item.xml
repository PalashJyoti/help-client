<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helopc.app.Ordered_Item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
    <TextView
        android:id="@+id/orderid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/itcavant"/>
    <androidx.recyclerview.widget.RecyclerView
        android:background="#EAEAEA"
        android:layout_marginTop="10dp"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Amount"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/metro_m"/>
    <TextView
        android:id="@+id/paid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paid or not"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/metro_m"/>
    <TextView
        android:id="@+id/orderstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order placed. Please wait for confirmation"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/metro_m"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expected delivery time will be informed to you soon"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/metro_m"/>
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/cancel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cancel Order"
    android:background="@color/teal_700"
    android:textColor="#fff"
    android:fontFamily="@font/metro_m"
    android:layout_margin="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Invoice"
        android:background="@color/teal_700"
        android:textColor="#fff"
        android:fontFamily="@font/metro_m"
        android:layout_margin="20dp"
        android:visibility="gone"/>
</LinearLayout>
</ScrollView>